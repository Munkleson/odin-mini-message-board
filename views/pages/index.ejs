<%- include('../partials/head') %>

<body>
    <div class="topRelative"></div>
    <header class="header">
        <p id="myName">Munkleson @ GitHub</p>
        <h1 class="pacifico-regular indexH1Text">Leave nothing unsaid</h1>
        <div class="headerButtonContainer">
            <button onclick="window.location.href='/new';" class="writeMessageButton">
                <p class="writeButtonText">Write your own message üñäÔ∏è</p>
            </button>
            <!-- <button>About</button> -->
        </div>
    </header>

    <div class="subBodyContainer">
        <br>
        <div class="mainContainerDiv">
        <!-- <ul> -->
            <% messages.forEach((messages) => { %>
                <button class="messageDiv messageDivStatic">
                    <div class="messageBackgroundDiv" style="background-image: url('<%= messages.backgroundImageArray %>')"></div>
                    <div class="messageContentDiv">
                        <h2 class="<%= messages.fromTextColor %> lightFromBackdrop authorText">From: <%= messages.user %> </h2>
                        <div class="messageTextContainer <%= messages.lightnessCheck %>">
                            <p class="messageText <%= messages.messageTextColor %>"><%= messages.text %></p>
                        </div>
                        <!-- <p>Added: <%= messages.added %></p> -->
                    </div>
                </button>
                <!-- <hr /> -->
            <% }) %>
            <!-- </ul> -->
        </div>
    </div>

</body>
<script src="../messagePopup.js"></script>

